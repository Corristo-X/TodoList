{% extends 'base.html.twig' %}

{% block title %}Lista Todo{% endblock %}

{% block body %}
<h1>Lista Todo</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Content</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for todo in todos %}
        <tr>
            <td>{{ todo.id }}</td>
            <td>{{ todo.content }}</td>
            <td>{{ todo.status ? 'Yes' : 'No' }}</td>
            <td>
                <a href="{{ path('todo_show', {'id': todo.id}) }}">show</a>
                <a href="{{ path('todo_edit', {'id': todo.id}) }}">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('todo_new') }}">Create new</a>
{% endblock %}
